{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",          // 或 "NodeNext"、"Bundler"
    "moduleResolution": "Node16", // 必须同步修改
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
